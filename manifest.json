{
  "manifest_version": 3,
  "name": "Tab Counter",
  "version": "1.0",
  "description": "Displays the number of open tabs in the current window",
  "permissions": ["tabs", "windows"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}